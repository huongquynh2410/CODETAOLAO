  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background: linear-gradient(to right, #74ebd5, #acb6e5);
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin: 0;
    }
    h1 {
      color: #2c3e50;
      margin-bottom: 10px;
    }
    input {
      padding: 10px;
      font-size: 18px;
      width: 100px;
      text-align: center;
      border-radius: 8px;
      border: 2px solid #2c3e50;
    }
    button {
      padding: 10px 20px;
      font-size: 18px;
      margin: 10px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      background: #2ecc71;
      color: white;
      transition: 0.3s;
    }
    button:hover {
      background: #27ae60;
    }
    #message {
      margin-top: 20px;
      font-size: 20px;
      color: #34495e;
      font-weight: bold;
    }
    #attempts {
      margin-top: 10px;
      font-size: 18px;
      color: #555;
    }
  </style>
