<body>
  <h1>🎲 Game Đoán Số May Mắn 🎲</h1>
  <p>Máy đã chọn 1 số từ <b>1 → 100</b>. Bạn có 7 lần đoán!</p>
  <input type="number" id="guessInput" min="1" max="100" placeholder="Nhập số">
  <button onclick="checkGuess()">Đoán</button>
  <button onclick="resetGame()">Chơi lại</button>
  <div id="message">Hãy thử vận may nào 😎</div>
  <div id="attempts"></div>

  <script>
    let secretNumber;
    let attempts;
    const maxAttempts = 7;

    function startGame() {
      secretNumber = Math.floor(Math.random() * 100) + 1;
      attempts = 0;
      document.getElementById("message").textContent = "Hãy thử vận may nào 😎";
      document.getElementById("attempts").textContent = `Lượt còn lại: ${maxAttempts}`;
      document.getElementById("guessInput").value = "";
    }

    function checkGuess() {
      const guess = parseInt(document.getElementById("guessInput").value);
      if (isNaN(guess) || guess < 1 || guess > 100) {
        document.getElementById("message").textContent = "⛔ Vui lòng nhập số từ 1 đến 100!";
        return;
      }

      attempts++;
      if (guess === secretNumber) {
        document.getElementById("message").textContent = `🎉 Chính xác! Số bí mật là ${secretNumber}`;
        document.getElementById("attempts").textContent = "Bạn thắng rồi!";
      } else if (attempts >= maxAttempts) {
        document.getElementById("message").textContent = `😢 Thua rồi! Số bí mật là ${secretNumber}`;
        document.getElementById("attempts").textContent = "Hết lượt chơi!";
      } else if (guess < secretNumber) {
        document.getElementById("message").textContent = "🔼 Số bí mật LỚN hơn!";
        document.getElementById("attempts").textContent = `Lượt còn lại: ${maxAttempts - attempts}`;
      } else {
        document.getElementById("message").textContent = "🔽 Số bí mật NHỎ hơn!";
        document.getElementById("attempts").textContent = `Lượt còn lại: ${maxAttempts - attempts}`;
      }
    }

    function resetGame() {
      startGame();
    }

    startGame();
  </script>
</body>
</html>
